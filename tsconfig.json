{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",
    "lib": ["es2021", "DOM", "DOM.Iterable", "es2015.iterable"],
    "types": [],
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
  }
}